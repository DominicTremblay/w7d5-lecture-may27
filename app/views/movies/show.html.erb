<div class="container">

<p>
<%= link_to 'All movies', movies_path %>
</p>
<%= movie_overview(@movie) %>



  <div class="media show">
      <%= image_tag @movie.image_url %>
  <div class="media-body">
    <h5 class="mt-0"><%= @movie.title%></h5>
      <ul>
        <li><%= @movie.description%></li>
        <li>Director: <%= @movie.director %></li>
        <li>Release Date: <%= @movie.release_date %></li>
        <li>Runtime: <%= @movie.runtime_in_minutes %> </li>
      </ul>
    <h3>Add a Review</h3>

    <%= form_for [@movie, @review] do |f| %>

    <% if @movie.errors.any? %>
      <div class="alert alert-danger">
        <strong>The following errors prevented saving:</strong>
        <ul>
          <% @movie.errors.full_messages.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

      <div class="form-group">
        <%= f.label :rating %>
        <%= f.text_field :rating %>
      </div>

      <div class="form-group">
        <%= f.label :comment %>
        <%= f.text_field :comment %>
      </div>

      <%= f.submit 'Add Review' %>

    <% end %>
    </div>    
  </div>

<h3>Reviews</h3>

<div class="container">
<ul class="list-group">
  <%= render partial: 'movies/review', collection: @reviews %>
</ul>
</div>
</div>